#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int x,y;
        cin>>x>>y;
        int wage = 0;
        if (x > y || x == y)
            wage = y;
        else
            wage = x + (y-x)*2;
        cout << wage << endl;
        // your code goes here
    }
	

}
